name: Download File Hourly

  on:
  schedule:
    - cron: '0 * * * *'

      jobs:
  download:
    runs-on: ubuntu-latest
          steps:
      - name: Get the code
                uses: actions/checkout@v4
                        - name: Download the file
                                  run: |
                                              echo "Starting download..."
                                              curl -L http://opop.pro/mzQgYQA9VGbS4 --output downloaded_file.txt
